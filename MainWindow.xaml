<Window x:Class="Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WeatherApp" Height="739" Width="802">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- 0: Input -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Alerts banner -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Hourly strip -->
            <RowDefinition Height="*"/>
            <!-- 3: 7‑day forecast -->
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: City input, toggle, button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <!-- your existing controls -->
            <TextBlock Text="City:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtCity" Width="300" Height="30" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
            <ToggleButton x:Name="toggleUnit" Content="°F" IsChecked="True"
                    Checked="toggleUnit_Checked" Unchecked="toggleUnit_Unchecked"
                    Width="60" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="btnGetWeather" Content="Get Weather" Click="btnGetWeather_Click"
              Width="120" Height="30"/>
        </StackPanel>

        <!-- Row 1: Alerts banner -->
        <Border x:Name="AlertsBorder"
            Grid.Row="1"
            Background="LightGreen"
            CornerRadius="4"
            Padding="6"
            Margin="0,0,0,10">
            <TextBlock x:Name="AlertsBanner"
                 Text="No active alerts."
                 FontWeight="Bold"
                 TextWrapping="Wrap"/>
        </Border>

        <!-- Row 2: Hourly Forecast Strip (click‑and‑drag) -->
        <Border Grid.Row="2" Background="#E1F5FE" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <!-- existing hourly layout -->
            <StackPanel>
                <TextBlock Text="Hourly Forecast (next 24 h)"
                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ScrollViewer x:Name="HourlyScrollViewer"
                      HorizontalScrollBarVisibility="Hidden"
                      VerticalScrollBarVisibility="Disabled"
                      PreviewMouseLeftButtonDown="HourlyScrollViewer_PreviewMouseLeftButtonDown"
                      PreviewMouseMove="HourlyScrollViewer_PreviewMouseMove"
                      PreviewMouseLeftButtonUp="HourlyScrollViewer_PreviewMouseLeftButtonUp">
                    <StackPanel x:Name="HourlyPanel" Orientation="Horizontal"/>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Row 3: 7‑Day Forecast -->
        <Border Grid.Row="3" Background="#E0F7FA" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock Text="7‑Day Forecast" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <StackPanel x:Name="DailyPanel" Orientation="Vertical" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
